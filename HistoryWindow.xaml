<Window x:Class="ChatApp.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historial de Conversaciones" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D">

    <Window.Resources>
        <Style x:Key="HistoryButton" TargetType="Button">
            <Setter Property="Background" Value="#10A37F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E8F6F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource HistoryButton}">
            <Setter Property="Background" Value="#DC2626"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B91C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#171717" 
                BorderThickness="0,0,0,1" 
                BorderBrush="#2A2A2A">
            <Grid Margin="20,0">
                <TextBlock Text="Historial de Conversaciones" 
                         Foreground="White" 
                         FontSize="18" 
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center">
                    <TextBox x:Name="SearchBox"
                           Width="200"
                           Height="36"
                           Background="#2A2A2A"
                           Foreground="White"
                           BorderBrush="#3A3A3A"
                           Padding="10"
                           TextChanged="SearchBox_TextChanged"
                           VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="&#128269;" 
                             Foreground="#666666"
                             FontSize="16"
                             Margin="-35,0,20,0"
                             VerticalAlignment="Center"
                             IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conversations List -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Background="#0D0D0D">
            <ItemsControl x:Name="ConversationsPanel" Margin="20">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#171717"
                                BorderBrush="#2A2A2A"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="20"
                                Margin="0,0,0,12"
                                MouseEnter="ConversationItem_MouseEnter"
                                MouseLeave="ConversationItem_MouseLeave"
                                Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}" 
                                             Foreground="White" 
                                             FontSize="16" 
                                             FontWeight="SemiBold"
                                             TextTrimming="CharacterEllipsis"
                                             Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayDate}" 
                                                 Foreground="#666666" 
                                                 FontSize="12"
                                                 Margin="0,0,16,0"/>
                                        <TextBlock Foreground="#666666" FontSize="12">
                                            <Run Text="{Binding MessageCount, Mode=OneWay}"/>
                                            <Run Text=" mensajes"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                          Orientation="Horizontal"
                                          VerticalAlignment="Center">
                                    <Button Content="Abrir"
                                          Style="{StaticResource HistoryButton}"
                                          Tag="{Binding Id}"
                                          Click="LoadConversation_Click"/>
                                    <Button Content="Eliminar"
                                          Style="{StaticResource DeleteButton}"
                                          Tag="{Binding Id}"
                                          Click="DeleteConversation_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="#171717"
                BorderThickness="0,1,0,0"
                BorderBrush="#2A2A2A"
                Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="#666666" FontSize="13">
                        <Run Text="Total:"/>
                        <Run x:Name="TotalConversations" Text="0" FontWeight="Bold"/>
                        <Run Text=" conversaciones"/>
                    </TextBlock>
                </StackPanel>

                <Button Content="Cerrar"
                       Style="{StaticResource HistoryButton}"
                       HorizontalAlignment="Right"
                       Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
