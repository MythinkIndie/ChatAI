<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Estilo para bloques de código -->
	<Style x:Key="CodeBlockStyle" TargetType="Section">
		<Setter Property="Background" Value="#1E1E1E"/>
		<Setter Property="Padding" Value="16"/>
		<Setter Property="Margin" Value="0,8,0,8"/>
		<Setter Property="BorderBrush" Value="#3A3A3A"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- Estilo para código inline -->
	<Style x:Key="InlineCodeStyle" TargetType="Span">
		<Setter Property="Background" Value="#2A2A2A"/>
		<Setter Property="Foreground" Value="#E06C75"/>
		<Setter Property="FontFamily" Value="Consolas, Courier New"/>
		<Setter Property="FontSize" Value="13"/>
	</Style>

	<!-- Estilo para listas -->
	<Style x:Key="ListStyle" TargetType="List">
		<Setter Property="Margin" Value="0,8,0,8"/>
		<Setter Property="Padding" Value="0,0,0,0"/>
	</Style>

	<!-- Estilo para títulos -->
	<Style x:Key="HeadingStyle" TargetType="Paragraph">
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Margin" Value="0,16,0,8"/>
		<Setter Property="Foreground" Value="#ECECEC"/>
	</Style>

</ResourceDictionary>
